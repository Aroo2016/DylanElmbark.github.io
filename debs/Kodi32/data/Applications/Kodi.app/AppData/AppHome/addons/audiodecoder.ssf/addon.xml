<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="audiodecoder.ssf"
  version="2.0.1"
  name="SSF/DSF Audio Decoder"
  provider-name="spiff">
  <requires>
<import addon="kodi.binary.global.main" version="1.0.14"/>
<import addon="kodi.binary.global.filesystem" version="1.0.2"/>
<import addon="kodi.binary.instance.audiodecoder" version="2.0.0"/></requires>
  <extension
    point="kodi.audiodecoder"
    name="ssf"
    extension=".ssf|.minissf|.dsf|.minidsf"
    tags="true"
    library_ios="audiodecoder.ssf.2.0.1.dylib"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Sega SSF/DSF Audio Decoder</summary>
    <description lang="en">Sega Saturn Sound Format (SSF) and Dreamcast Sound Format (DSF) is an audio format based on PSF. It stores audio ripped from the ROMs of Sega Saturn and Sega Dreamcast games.</description>
    <platform>ios-armv7</platform>
  </extension>
</addon>
